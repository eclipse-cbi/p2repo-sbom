<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.cbi.p2repo.sbom.ui.GenerateSBOMHandler"
            description="Generate an SBOM"
            id="org.eclipse.cbi.p2repo.sbom.generate"
            name="Generate SBOM...">
      </command>
   </extension>

   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.eclipse.cbi.p2repo.sbom.generate"
            icon="icons/sbom.svg">
      </image>
   </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:help?before=about">
         <command
               commandId="org.eclipse.cbi.p2repo.sbom.generate"
               style="push">
         </command>
      </menuContribution>
   </extension>
</plugin>
